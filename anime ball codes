local function invokeServer(service, action, args)
    game:GetService("ReplicatedStorage").Framework.RemoteFunction:InvokeServer(service, action, args)
end

local function redeemCodes(codes)
    for _, code in ipairs(codes) do
        invokeServer("CodeService", "Redeem", {code})
        task.wait(1)
    end
end

function ballz()
    invokeServer("RewardService", "ClaimDailyReward", {})
    task.wait(1)

    local codes = {
        "THEUPDATEISREAL",
        "50M-OMG",
        "450KFANS",
        "GAMEISALIVE!",
        "THE0NEP1ECEISREAL",
        "FIREUPDATE!",
        "124000LIKES",
        "35MIL",
        "TOURNEYSARECOOL",
        "ANIMEBALLISCOOL",
        "400KGROUPMEMBERSYO",
        "PROGAME!",
        "85KLIKES",
        "15MTHANKS",
        "SORRY4DELAY",
	"HYPE!",
	"YOURETHEBEST"
    }

    redeemCodes(codes)
end

function buyspin()
    invokeServer("CrateService", "BuyCrate", {"SwordA1", 1})
    game:GetService("ReplicatedStorage").Framework.RemoteEvent:FireServer("RewardService", "BuySpinWheel", {})
end

spawn(ballz)
task.wait(5)
while task.wait() do
    spawn(buyspin)
    if game.PlaceId ~= 15440283215 then
        game.Players.LocalPlayer.PlayerGui.SpinWheel.Holder.Visible = true
    end
end
